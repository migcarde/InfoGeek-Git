@model IEnumerable<InfoGeek.Models.Enterprise>

@{
    ViewData["Title"] = "Enterprises";
}

<h2>Enterprises</h2>

@if (User.IsInRole("ENTERPRISE"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>

}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@Html.DisplayTextFor(modelItem => item.Photo)" class="img-responsive" />
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Enterprise", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
