@model InfoGeek.Models.Curriculum

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Titles)
        </dt>
        <dd>
            <ul class="table-bordered">
                @foreach (var title in Model.Titles)
                {
                    @Html.Raw(title);
                    @Html.Raw("<br />");
                }
                
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Knowledges)
        </dt>
        <dd>
            <ul class="table-bordered">
                @foreach (var knowledge in Model.Knowledges)
                {
                    @Html.Raw(knowledge );
                    @Html.Raw("<br />");
                }

            </ul>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("USER"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id });
        @Html.Raw("|");
        <a asp-action="Index">Back to List</a>
    }

    @if (User.IsInRole("ENTERPRISE"))
    {
        <a asp-action="Curriculums" asp-route-id="@TempData["Enterprise"]">Back to List</a>

    }

</div>
