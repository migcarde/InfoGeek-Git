@model InfoGeek.Models.SponsorShip

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>SponsorShip</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Banner)
        </dt>
        <dd>
            <img src="@Html.DisplayTextFor(model => model.Banner)" alt="@Html.DisplayTextFor(model => model.Banner)" class="img-responsive" height="400" width="400"/>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("SPONSOR"))
    {
        Html.Raw("|");
        Html.ActionLink("Edit", "Edit", new { id = Model.Id });

    }
    @if (User.IsInRole("SPONSOR")) { <a asp-action="MySponsorShips">Back to List</a> }
    @if (User.IsInRole("ADMIN")) { <a asp-action="Index">Back to List</a> }

</div>
